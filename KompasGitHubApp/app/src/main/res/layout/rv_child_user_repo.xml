<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/repo_name"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repos Name"
            android:textSize="30sp"
            android:textColor="@color/black_700"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/repo_desc"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean non tortor sit amet magna luctus gravida. Morbi lorem lorem, egestas eget pharetra at, blandit nec sem. Nam euismod, ligula ut venenatis laoreet, tortor orci rhoncus elit, at egestas massa erat quis ligula. Suspendisse commodo elit sit amet volutpat egestas. "
            android:textSize="18sp"
            android:textColor="@color/black_200"/>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_star_outline_24"/>

            <TextView
                android:id="@+id/repo_star"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="18sp"
                android:textColor="@color/black_700"/>

            <TextView
                android:id="@+id/repo_last_update"
                android:layout_marginLeft="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Last Updated 15 minutes ago"
                android:textSize="18sp"
                android:textColor="@color/black_700"/>


        </LinearLayout>


    </LinearLayout>
</layout>